<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:gravity="center"
    tools:context=".MainActivity2"
    android:orientation="vertical">


    <EditText
        android:id="@+id/act_2_qualification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Enter your Highest Qualification"
        android:inputType="text"
        android:padding="16dp" />

    <EditText
        android:id="@+id/act_2_percentage"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint = "Enter your percentage in graduation"
        />

    <EditText
        android:id="@+id/act_2_college"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint = "Enter your college name"
        />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:padding="16dp"
       >
       <Button
           android:id="@+id/act2_prev"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="prev"
           android:layout_marginRight="20dp"/>
"/>
       <Button
           android:id="@+id/act2_next"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="next"
           android:layout_marginLeft="20dp"/>
   </LinearLayout>
    



</LinearLayout>